            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/testButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="click"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/againTestButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="againText"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/detectButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Detect"
        android:textSize="20dp"/>

</LinearLayout>