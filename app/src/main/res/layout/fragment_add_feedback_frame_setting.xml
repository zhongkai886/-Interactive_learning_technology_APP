<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mindanalysis.mbti.tyes.Experiment_Setting.FeeBackFrameSetting.AddFeedbackFrameSetting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回饋框架設定"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/title_vertical_detect_id"
        app:layout_constraintBottom_toBottomOf="@id/title_horizontal"/>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回饋代稱" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="輸入回饋代稱" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="請選擇要偵測的腦波項目"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/itemSpinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:entries="@array/itemSpinner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="當Attention水平:高於"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/attentionHigh"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="0-100"
                android:numeric="integer" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="低於"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/attentionLow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="0-100"
                android:numeric="integer" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="時"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回饋方式"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/radioGroupAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/attSight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="視覺" />

                <RadioButton
                    android:id="@+id/attShock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="震動" />

                <RadioButton
                    android:id="@+id/attVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聲音" />
            </RadioGroup>

            <EditText
                android:id="@+id/attentionMp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="mp3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="當Relaxation水平:高於"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/relaxationHigh"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="0-100"
                android:numeric="integer" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="低於"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/relaxationLow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="0-100"
                android:numeric="integer" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="時"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回饋方式" />

            <RadioGroup
                android:id="@+id/radioGroupRel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/relSight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="視覺" />

                <RadioButton
                    android:id="@+id/relShock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="震動" />

                <RadioButton
                    android:id="@+id/relVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聲音" />
            </RadioGroup>

            <EditText
                android:id="@+id/relaxationMp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="mp3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="開始測量" />

            <EditText
                android:id="@+id/fbwSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="輸入數字"
                android:numeric="integer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒後開始回饋" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回饋之後，" />

            <EditText
                android:id="@+id/fbwSecTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="輸入數字"
                android:numeric="integer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒內不會再次提醒" />
        </LinearLayout>
    </LinearLayout>

    <Button

        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="儲存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_vertical_detect_id"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_vertical_detect_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>